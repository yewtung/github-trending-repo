<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:viewBindingIgnore="true"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/top_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/repo_image"
            android:src="@mipmap/ic_launcher_round"
            android:layout_centerVertical="true"/>

        <TextView
            android:id="@+id/repo_author"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="author"
            android:layout_toRightOf="@+id/repo_image"
            android:layout_toEndOf="@id/repo_image"
            android:layout_marginLeft="16dp"
            android:textSize="12dp"
            android:textColor="@color/grey_text"
            android:fontFamily="@font/roboto_regular"/>

        <TextView
            android:id="@+id/repo_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="name"
            android:layout_toRightOf="@+id/repo_image"
            android:layout_toEndOf="@id/repo_image"
            android:layout_below="@id/repo_author"
            android:layout_marginLeft="16dp"
            android:textSize="15dp"
            android:textColor="@color/grey_text"
            android:fontFamily="@font/roboto_medium"/>
    </RelativeLayout>
    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/expand_view"
        android:elevation="2dp"
        android:clipToPadding="false"
        android:clipChildren="false"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/top_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/top_view">
        <TextView
            android:id="@+id/repo_description"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="description"
            android:layout_marginLeft="48dp"
            android:textSize="15dp"
            android:textColor="@color/grey_text"
            android:fontFamily="@font/roboto_medium"/>

        <ImageView
            android:id="@+id/image_red_circle"
            android:layout_width="8dp"
            android:layout_height="8dp"
            android:src="@mipmap/ic_circle"
            android:layout_marginTop="7dp"
            android:layout_marginLeft="48dp"
            android:layout_below="@+id/repo_description" />

        <TextView
            android:id="@+id/repo_language"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="C++"
            android:layout_toRightOf="@+id/image_red_circle"
            android:layout_toEndOf="@id/image_red_circle"
            android:layout_below="@id/repo_description"
            android:textSize="15dp"
            android:textColor="@color/grey_text"
            android:fontFamily="@font/roboto_medium"/>

        <ImageView
            android:id="@+id/image_stars"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:src="@drawable/stars"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/repo_language"
            android:layout_toEndOf="@id/repo_language"
            android:layout_below="@id/repo_description"/>

        <TextView
            android:id="@+id/repo_stars"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="14,236"
            android:layout_toRightOf="@+id/image_stars"
            android:layout_toEndOf="@id/image_stars"
            android:layout_below="@id/repo_description"
            android:textSize="15dp"
            android:textColor="@color/grey_text"
            android:fontFamily="@font/roboto_medium"
            />

        <ImageView
            android:id="@+id/image_fork"
            android:layout_width="16dp"
            android:layout_height="16dp"
            android:layout_marginLeft="16dp"
            android:src="@drawable/fork"
            android:layout_toRightOf="@+id/repo_stars"
            android:layout_toEndOf="@id/repo_stars"
            android:layout_below="@id/repo_description"/>

        <TextView
            android:id="@+id/repo_fork"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4,236"
            android:layout_toRightOf="@+id/image_fork"
            android:layout_toEndOf="@id/image_fork"
            android:layout_below="@id/repo_description"
            android:textSize="15dp"
            android:textColor="@color/grey_text"
            android:fontFamily="@font/roboto_medium"/>

    </RelativeLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="20dp"
        android:background="@color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/expand_view" />


</androidx.constraintlayout.widget.ConstraintLayout>